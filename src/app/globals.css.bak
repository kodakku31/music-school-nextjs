  margin: 0 auto 3rem;
  padding: 0;
  background-color: transparent;
  border: none;
  box-shadow: none;
}

.contact-form-intro {
  margin-bottom: 2rem;
  text-align: center;
  line-height: 1.8;
}

.contact-form {
  width: 100%;
}

.contact-form .form-group {
  margin-bottom: 1.5rem;
}

.contact-form .form-row {
  display: flex;
  gap: 1.5rem;
  margin-bottom: 1.5rem;
}

